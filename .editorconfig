# only for the top-most EditorConfig file
root = true

[*]
indent_size = 4
indent_style = space

[*.cs]
max_line_length = 140
end_of_line = crlf
indent_size = 4
indent_style = space
insert_final_newline = false
tab_width = 4
trim_trailing_whitespace = true

