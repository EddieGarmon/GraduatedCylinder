[*.{csproj,vcxproj,vcxproj.filters,proj,nativeproj,locproj}] 
indent_size = 2 

# Xml build files 
[*.builds] 
indent_size = 2 

# Xml files 
[*.{xml,stylecop,resx,ruleset}] 
indent_size = 2 

# Shell scripts 
[*.sh] 
end_of_line = lf 
[*.{cmd, bat}] 
end_of_line = crlf 

